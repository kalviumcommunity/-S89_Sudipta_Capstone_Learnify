# Backend Environment Variables
# Copy this file to .env for local development
# For production deployment, set these variables in your hosting platform

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/learnify

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# URL Configuration
CLIENT_URL=http://localhost:5177
BACKEND_URL=http://localhost:5000

# Production URL Examples:
# CLIENT_URL=https://your-frontend-domain.netlify.app
# BACKEND_URL=https://your-backend-domain.onrender.com

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Rate Limiting
AUTH_RATE_LIMIT=10

# AI Service Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
